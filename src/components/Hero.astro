---
import { Picture } from "astro:assets";
import DojoImage from "../assets/dojo.png";
import Link from "./Link.astro";
import { heroContent } from "../../constants/branding";
---

<main class="relative overflow-hidden">
  <div class="container mx-auto px-4 md:px-16 lg:px-32 py-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold">
            {heroContent.title}
          </h1>
          <p class="text-xl text-gray-700 max-w-xl leading-relaxed">
            {heroContent.tagline}
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <Link
            href="#"
            class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium transition-all duration-200 shadow-lg hover:shadow-xl border-2 border-gray-300"
            rel="noopener"
          >
            {heroContent.buttonText}
          </Link>
        </div>
      </div>

      <div class="relative md:order-1">
        <div class="relative z-10">
          <Picture
            src={DojoImage}
            alt="Language learning illustration"
            widths={[200, 400, 600]}
            sizes="(max-width: 500px) 100vw, 500px"
            loading="eager"
            format="avif"
            class="rounded-2xl"
          />
        </div>
      </div>
    </div>
  </div>
</main>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
